
@{
    ViewBag.Title = "Login";
}
@model ODM.Models.LoginViewModel
@Styles.Render("~/Content/stylesheets/style.css")

<style>
    .login__container {
        width: 30%;
        margin: 20px auto;
        padding: 48px;
        background-color: #F2F6FA;
        border-radius: 16px;
    }

    .login__title {
        margin-bottom: 10px;
        font-size: 36px;
        font-weight: 800;
        color: #3E8CF2;
    }

    .login__subtitle {
        margin-bottom: 10px;
        font-weight: 300;
        font-size: 25px;
    }

    .login__form-title {
        margin-top: 30px;
        font-weight: 600;
        color: #003580;
        font-size: 36px;
        text-transform: uppercase;
        text-align: center;
    }

    .login__label {
        color: #003580;
    }

    .login__input {
        max-width: initial;
        width: 100%;
        background-color: transparent;
        color: rgba(62, 140, 242, 0.5);
        padding: 8px;
        border-radius: 8px;
    }

    ::placeholder {
        color: rgba(62, 140, 242, 0.5);
        text-decoration: underline;
    }

    .login__button {
        margin-top: 12px;
        padding: 6px 48px;
        font-weight: 600;
        font-size: 16px;
        background-color: #003580;
        border-radius: 4px;
        color: #fff;
    }
</style>


<div class="login__container" id="login-form">
    <h2 class="login__heading">
        <p class="login__title">Online Device</p>
        <p class="login__subtitle">Management</p>
    </h2>
    <h3 class="login__form-title">
        login
    </h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.Success
                </div>
            }
            <div class="form-group">
                @Html.LabelFor(model => model.username, "Email:", htmlAttributes: new { @class = "control-label login__label" })
                <div class="">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = " login__input", placeholder = "Enter your email" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.password, "Password:", htmlAttributes: new { @class = "control-label login__label" })
                <div class="">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = " login__input", placeholder = "Enter your password", type = "password" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>
            @if (ViewBag.Message != null)
            {
                <div class="form-group">
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Message
                    </div>
                </div>
            }

            <div class="form-group">
                <div class="">
                    <input type="submit" value="Login" class="login__button" />
                </div>
            </div>

        </div>
    }


</div>